</head>
<body>
<div id="app">
  <adc-test>
    <div slot-scope="{index}">{{index}}</div>
  </adc-test>
  <adc-table-column prop="name"
                        name="名称"
                        width="">
                        <div slot-scope="{index}">
                            {{index}}
                          <button type="button" class="btn btn-sm btn-danger">button in slot</button>
                        </div>
      </adc-table-column>
  <div class="mb10">
    <button type="button" class="btn btn-sm btn-primary" @click="getChecked">
      获取选中的项
    </button>
    <button type="button" class="btn btn-sm btn-primary" @click="change">
      修改配置
    </button>
    <button type="button" class="btn btn-sm btn-primary" @click="changeTable">
      修改表格
    </button>
    <button type="button" class="btn btn-sm btn-primary" @click="changeSelection">
      修改选中项
    </button>
  </div>
  <template v-if="table==='table1'">table1</template>
  <template v-else>table2</template>
  <div v-show="table==='table1'">
    <adc-table :data="tableData" 
      initial-all-checked 
      ref="table" 
      v-loading="loading" 
      class-name="table-bordered table-striped" 
      v-model="selection"
      @check-all="checkAll" 
      @check="checkOne">
      <adc-table-column type="selection" visible>
        <!--加入type:selection用于方便控制单行数据的该项的显示-->

      </adc-table-column>
      <adc-table-column prop="name"
                        name="名称"
                        width="">
                        <template slot-scope="{data, item, index}">
                          <button type="button" class="btn btn-sm btn-danger" @click="clickSlot(data, item, index)">button in scopedSlot</button>
                        </template>
      </adc-table-column>
      <adc-table-column prop="age"
                        name="年龄"
                        width="" :visible="visibleFilter" filter="a" :class-name="className">
                        <button type="button" class="btn btn-sm btn-primary">button in slot</button>
      </adc-table-column>
      <adc-table-column prop="order"
                        name="排序"
                        width="180" :vm="vms.order">
      </adc-table-column>
      <adc-table-column prop="dep"
                        name="部门"
                        width=""
                        :class-name="[{text: '系统研发', className: 'text-danger'},{text: '移动平台', className: 'text-success'}]"
                        :mapper="deps">
      </adc-table-column>
      <adc-table-column prop="img"
                        name="图片"
                        width=""
                        :vm="vms.img">
      </adc-table-column>
      <adc-table-column prop="html" name="dom" :filter="htmlResolve" as-html>

      </adc-table-column>
      <adc-table-column name="操作"
                        width="200">
                        <template slot-scope="{data, item, index}">
                            <button type="button" class="btn btn-sm btn-primary" @click="edit(item, index)">
                                <span class="glyphicon glyphicon-edit"></span>
                                编辑
                            </button>
                            <button type="button" class="btn btn-sm btn-success">
                                <span class="glyphicon glyphicon-eye-open"></span>
                                查看
                            </button>
                        </template>
      </adc-table-column>
    </adc-table>
  </div>
